{% extends 'MesdOrcaseAppBundle:Index:index.html.twig' %}

{% block main %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Shorttitle</th>
                <td>{{ entity.shortTitle }}</td>
            </tr>
            <tr>
                <th>Longtitle</th>
                <td>{{ entity.longTitle }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body }}</td>
            </tr>
            <tr>
                <th>Bodyraw</th>
                <td>{{ entity.bodyRaw }}</td>
            </tr>
            <tr>
                <th>Usermodifiable</th>
                <td>{{ entity.userModifiable }}</td>
            </tr>
            <tr>
                <th>Sticky</th>
                <td>{{ entity.sticky }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{{ entity.createdOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Postedon</th>
                <td>{{ entity.postedOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Expiredon</th>
                <td>{{ entity.expiredOn|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('notification') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('notification_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock main %}
